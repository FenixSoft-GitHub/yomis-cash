---
import { getI18N } from "@/i18n/index";
import Logo from "./Logo.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section
  class="relative text-xl text-left max-w-[70ch] text-pretty mx-auto md:px-8 lg:mt-24 md:mt-96 grid gap-4"
>
  <Logo logoSize="16" />
  <h1
    class="text-6xl font-great text-center text-wrap mx-auto mb-4 tracking-wide"
  >
    {i18n.INTRO_TITLE}
  </h1>
  <h2
    class="text-2xl font-semibold text-center text-wrap mx-auto mb-4 tracking-wide"
  >
    {i18n.INTRO_SUBTITLE}
  </h2>
  <p
    set:html={i18n.INTRO_DESCRIPTION}
    class="max-w-[800px] mx-auto text-balance text-center text-sm tracking-wide md:text-xl"
  />
</section>
