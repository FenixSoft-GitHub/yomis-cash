---
import { CountUp } from "./CountUp.tsx";
import { getI18N } from "@/i18n/"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="max-w-6xl mx-auto py-20 px-20">
    <h2 class="text-3xl lg:text-4xl text-center text-balance mb-10 lg:mb-20 font-semibold  font-lexend">{i18n.ABOUTUS.NUMBERS}</h2>
    <div class="grid grid-cols-1 gap-y-10 lg:grid-cols-3">
        <div class="flex flex-col justify-center items-center">
            <span class="number text-6xl font-bold tabular-nums tracking-tighter">
                +<CountUp client:visible initial={0} final={100}/>M
            </span>
            <span class="uppercase opacity-70">
                {i18n.ABOUTUS.NUMBERS_TRANS}
            </span>
        </div>
        
        <div class="flex flex-col justify-center items-center">
            <span class="number text-6xl font-bold tabular-nums tracking-tighter">
                <CountUp client:visible initial={0} final={10}/>
            </span>
            
            <span class="uppercase opacity-70">
                {i18n.ABOUTUS.NUMBERS_COUNTRY}
            </span>
        </div>
        
        <div class="flex flex-col justify-center items-center">
            <span class="number text-6xl font-bold tabular-nums tracking-tighter">
                +<CountUp client:visible initial={0} final={8}/>
            </span>
            <span class="uppercase opacity-70">
                {i18n.ABOUTUS.NUMBERS_YEAR}
            </span>
        </div>
    </div>
</section>

<style>
    .number {
        text-shadow: 0 0 15px rgba(197, 225, 255, 0.9);
    }
</style>