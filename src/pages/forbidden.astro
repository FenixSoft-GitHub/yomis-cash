---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Mensaje de Acceso denegado" description="">
  <div
    class="flex justify-center items-center min-h-screen bg-linear-to-t from-zinc-900 to-zinc-500"
  >
    <section
      class="mx-auto w-full max-w-md p-6 grid gap-6 justify-center items-center bg-gray-700 text-white rounded-lg shadow-lg border-2 border-gray-400"
    >
      <h2 class="text-2xl font-semibold tracking-wider text-center">
        Acceso Denegado
      </h2>
      <p class="text-lg font-medium text-center">
        No tienes permiso para acceder a esta página.
      </p>
      <a
        href="/"
        class="bg-linear-to-t from-blue-900 to-blue-500 hover:scale-110 text-white py-2 px-4 rounded-full transition ease-in-out duration-300 flex justify-center items-center gap-3 w-full text-xl"
      >
        Inicia sesión
      </a>
    </section>
  </div>
</Layout>
